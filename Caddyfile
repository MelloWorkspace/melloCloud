# Main domain with frontend and API
mellocloud.net, www.mellocloud.net {
	encode gzip
	log

	# Security headers
	header {
		# Remove server info
		-Server
		# Security headers
		X-Content-Type-Options nosniff
		X-Frame-Options DENY
		X-XSS-Protection "1; mode=block"
		Referrer-Policy "strict-origin-when-cross-origin"
	}

	# Proxy frontend (Vite)
	@frontend not path /api* /socket.io* /portainer*
	handle @frontend {
		reverse_proxy frontend:5173 {
			# Handle connection errors
			try_duration 5s
			try_interval 250ms
		}
	}

	# Proxy API requests
	handle_path /api* {
		reverse_proxy backend:1337 {
			# Handle connection errors
			try_duration 5s
			try_interval 250ms
		}
	}

	# Proxy WebSocket requests (e.g., socket.io)
	handle_path /socket.io* {
		reverse_proxy backend:1337 {
			# Enable WebSocket support
			header_up Connection {>Connection}
			header_up Upgrade {>Upgrade}
			# Handle connection errors
			try_duration 5s
			try_interval 250ms
		}
	}

	# Proxy Portainer interface at /portainer
	handle_path /portainer* {
		# Remove /portainer prefix if Portainer expects clean paths
		uri strip_prefix /portainer
		reverse_proxy portainer:9000 {
			# Handle connection errors
			try_duration 5s
			try_interval 250ms
		}
	}

	# Allow search engine indexing
	handle /robots.txt {
		header Content-Type text/plain
		respond "User-agent: *\nAllow: /" 200
	}
}

# Separate domain for API
api.mellocloud.net {
	encode gzip
	log

	# Security headers (less restrictive for API)
	header {
		-Server
		X-Content-Type-Options nosniff
	}

	# Proxy all requests to the backend
	reverse_proxy backend:1337 {
		# Handle connection errors
		try_duration 5s
		try_interval 250ms
	}

	# Allow search engine indexing
	handle /robots.txt {
		header Content-Type text/plain
		respond "User-agent: *\nAllow: /" 200
	}
}

# Redirect HTTP to HTTPS (optional â€” Caddy does it automatically)
http://mellocloud.net, http://www.mellocloud.net, http://api.mellocloud.net {
	redir https://{host}{uri}
}