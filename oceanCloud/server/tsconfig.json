{
  "compilerOptions": {
    "sourceMap": true,
    "target": "es2016",               
    "module": "commonjs",                               
    "outDir": "dist",                                  
    "esModuleInterop": true,                    
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "lib": ["ESNext"],
    "skipLibCheck": true,
    "noImplicitAny": false,
  },
  "include": ["./**/*.ts", "./**/*.tsx"],
  "exclude": ["dist"]
}