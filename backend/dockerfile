FROM node:22-alpine

# Установка OpenSSL (fix with: https://github.com/prisma/prisma/discussions/22519)
RUN apk add --no-cache openssl

# Установка рабочей директории
WORKDIR /app

# Копируем package.json и package-lock.json (если он есть)
COPY package*.json ./ 

RUN rm -rf node_modules

RUN npm install

# Копируем все файлы проекта в контейнер
COPY . .

COPY prisma ./prisma/

# Выполняем сборку
RUN npm run build

# Открываем порты
EXPOSE 1337

# Команда для запуска в режиме разработки 
CMD ["npm", "run", "dev"]
