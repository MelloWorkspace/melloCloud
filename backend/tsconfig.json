{
  "compilerOptions": {
    "sourceMap": true,
    "target": "ES6",
    "module": "ESNext",
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "lib": ["ESNext"],
    "skipLibCheck": true,
    "noImplicitAny": false,
    "moduleResolution": "node",
    // "bun-types" is the important part
    "types": ["bun-types"]
  },
  "include": ["src/**/*.ts", "src/**/*.js"],
  "exclude": ["node_modules", "dist", "bun.lockb", "bunfig.toml"]
}
